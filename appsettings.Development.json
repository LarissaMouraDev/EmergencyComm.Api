{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "EmergencyComm.Api": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=emergency_comm_dev.db"
  },
  "DetailedErrors": true,
  "EmergencySettings": {
    "MaxMessageHops": 15,
    "DefaultBroadcastRadius": 15.0,
    "MessageRetentionDays": 7,
    "DeviceTimeoutHours": 12,
    "MaxDevicesPerNetwork": 2000,
    "HeartbeatIntervalSeconds": 15,
    "EnableDetailedLogging": true,
    "EnableMetrics": true
  },
  "NetworkSettings": {
    "BluetoothRange": 0.15,
    "WiFiDirectRange": 0.25,
    "RadioRange": 75.0,
    "MeshNetworkEnabled": true,
    "AutoDiscoveryEnabled": true,
    "EnableNetworkDiagnostics": true,
    "SimulateNetworkDelay": false
  },
  "DeveloperSettings": {
    "EnableSwaggerInProduction": true,
    "EnableDetailedErrorMessages": true,
    "EnableCorsForAll": true,
    "EnableSeedData": true,
    "AutoMigrateDatabase": true,
    "EnableFileLogging": true,
    "LogFilePath": "./Logs/emergency-comm-dev.log"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/emergency-comm-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}