@EmergencyComm.Api_HostAddress = https://localhost:7245

### Get all devices
GET {{EmergencyComm.Api_HostAddress}}/api/devices
Accept: application/json

### Register a new device
POST {{EmergencyComm.Api_HostAddress}}/api/devices/register
Content-Type: application/json

{
  "id": "mobile-001",
  "name": "Emergency Response Mobile",
  "deviceType": "Mobile",
  "latitude": -23.5505,
  "longitude": -46.6333,
  "batteryLevel": 85,
  "networkType": "WiFiDirect",
  "signalStrength": 95.0
}

### Get nearby devices
GET {{EmergencyComm.Api_HostAddress}}/api/devices/nearby?latitude=-23.5505&longitude=-46.6333&radiusKm=5
Accept: application/json

### Update device location
PUT {{EmergencyComm.Api_HostAddress}}/api/devices/mobile-001/location
Content-Type: application/json

{
  "latitude": -23.5515,
  "longitude": -46.6343,
  "altitude": 800.0
}

### Get all messages
GET {{EmergencyComm.Api_HostAddress}}/api/messages
Accept: application/json

### Send a message
POST {{EmergencyComm.Api_HostAddress}}/api/messages
Content-Type: application/json

{
  "senderId": "mobile-001",
  "content": "Testando sistema de comunicação de emergência",
  "messageType": "Text",
  "priority": "Normal",
  "latitude": -23.5505,
  "longitude": -46.6333,
  "recipientIds": ["device-001", "device-002"]
}

### Send emergency broadcast
POST {{EmergencyComm.Api_HostAddress}}/api/messages
Content-Type: application/json

{
  "senderId": "mobile-001",
  "content": "ALERTA DE EMERGÊNCIA: Evacuação imediata necessária na área do centro da cidade devido a risco de deslizamento.",
  "messageType": "Emergency",
  "priority": "Critical",
  "isEmergency": true,
  "isBroadcast": true,
  "latitude": -23.5505,
  "longitude": -46.6333,
  "maxHops": 10
}

### Get emergency messages
GET {{EmergencyComm.Api_HostAddress}}/api/messages/emergency
Accept: application/json

### Get all resources
GET {{EmergencyComm.Api_HostAddress}}/api/resources
Accept: application/json

